<% @posts.each do |post| %>
  <div class="white">
    <p><font size="5"><b><%= post.title %></b></font>
    <br>
    <%= image_tag post.image.url(:medium) %>
    <br>
    <%= post.description %>

      <%- if current_admin %>
    <br>
    <%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
        <% end %>
    </p>
  </div>
<% end %>
